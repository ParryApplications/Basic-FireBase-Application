<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sendActivity"
    android:background="@drawable/layout_design">

    <EditText
        android:id="@+id/name_id"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:inputType="textPersonName"
        android:hint="Name"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="158dp" />
    <EditText
        android:id="@+id/email_send_id"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/name_id"
        android:inputType="textEmailAddress"
        android:hint="Email"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="158dp" />
    <EditText
        android:id="@+id/pass_send_id"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@id/email_send_id"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="158dp" />
    <EditText
        android:id="@+id/age_send_id"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Age"
        android:layout_below="@id/pass_send_id"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="158dp" />
    <EditText
        android:id="@+id/phone_send_id"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Phone Number"
        android:layout_below="@id/age_send_id"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="158dp" />
    <Button
        android:id="@+id/send_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/phone_send_id"
        android:background="@drawable/layout_design"
        android:text="Send"
        />
    <Button
        android:id="@+id/read_send_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/phone_send_id"
        android:background="@drawable/layout_design"
        android:text="Read"
        />
</RelativeLayout>